# -----------------------------------------------------------------------------
#                               Generic config
# -----------------------------------------------------------------------------
alias rm='rm -i' # safer rm

# -----------------------------------------------------------------------------
#                                Local config
# -----------------------------------------------------------------------------
FILE="$HOME/.zsh/local.bash" && test -f $FILE && source $FILE

# -----------------------------------------------------------------------------
#                                  Aliases
# -----------------------------------------------------------------------------
[ -x "$(command -v nvim)" ] && alias vim="nvim";
[ -x "$(command -v exa)"  ] && alias ls="exa";

# -----------------------------------------------------------------------------
#                                   Theme
# -----------------------------------------------------------------------------
[ -x "$(command -v starship)" ] && eval "$(starship init zsh)"

